<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
             xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
             xmlns:main="clr-namespace:BambuMan.UI.Settings"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:constants="clr-namespace:BambuMan.Shared;assembly=BambuMan.Shared"
             xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
             xmlns:validation1="clr-namespace:BambuMan.Validation"
             xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
             x:Class="BambuMan.UI.Settings.SettingsPage"
             x:DataType="main:SettingsPageViewModel"
             Title="BambuMan Settings">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home" Clicked="BackToMain_OnClicked" Order="Primary">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="FASolid"
                                 Glyph="{x:Static fa:Solid.House}"
                                 Color="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="10">

        <input:FormView Spacing="10">
            <Grid ColumnDefinitions="*,Auto">
                <material:TextField x:Name="TfSpoolmanUrl" Title="Spoolman url:" Grid.Column="0"
                                    Text="{Binding SpoolmanUrl,Mode=TwoWay}"
                                    Icon="{FontImageSource FontFamily=MaterialSharp, Glyph={x:Static m:MaterialSharp.Link}}">
                    <validation:RequiredValidation />
                    <validation:RegexValidation Message="Invalid url, must start with http:// or https://" Pattern="{x:Static constants:Constants.UrlValidation }" />
                </material:TextField>
                <Button Grid.Column="1" Text="Scan QR" Clicked="ImageButton_OnClicked"
                        VerticalOptions="Start" Margin="6,7,0,0" Padding="10,4"
                        HeightRequest="46" FontSize="14"
                        BackgroundColor="Transparent"
                        TextColor="Crimson"
                        BorderColor="Crimson" BorderWidth="1"
                        CornerRadius="6"
                        ImageSource="{FontImageSource FontFamily=MaterialSharp, Glyph={x:Static m:MaterialSharp.Qr_code_scanner}, Color=Crimson, Size=18}" />
            </Grid>

            <Grid ColumnDefinitions="*,40">
                <material:CheckBox x:Name="TfFullTagScanAndUpload" Grid.Column="0" Text="Participate in NFC data upload [beta]" IsChecked="{Binding FullTagScanAndUpload, Mode=TwoWay}" Margin="10,5,0,0" />
                <ImageButton Grid.Column="1" HeightRequest="24" WidthRequest="24" Margin="0,8,10,0" Padding="2" Clicked="InfoButton_OnClicked" VerticalOptions="Start">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="MaterialSharp" Glyph="{x:Static m:MaterialSharp.Info}" Color="{AppThemeBinding Light={StaticResource Outline}, Dark={StaticResource OutlineDark}}" />
                    </ImageButton.Source>
                </ImageButton>
            </Grid>

            <material:CheckBox x:Name="TfUnknownFilamentEnabled" Text="Import unknown filament" IsChecked="{Binding UnknownFilamentEnabled, Mode=TwoWay}" Margin="10,0,10,0"></material:CheckBox>

            <material:CheckBox x:Name="TfShowLogsOnMainPage" Text="Show logs on main page" IsChecked="{Binding ShowLogsOnMainPage, Mode=TwoWay}" Margin="10,0,10,0"></material:CheckBox>

            <material:CheckBox x:Name="TfShowKeyboardOnSpoolRead" Text="Show keyboard on spool read" IsChecked="{Binding ShowKeyboardOnSpoolRead, Mode=TwoWay}" Margin="10,0,10,0"></material:CheckBox>

            <material:CheckBox x:Name="TfOverrideLocationOnRead" Text="Override location on read" IsChecked="{Binding OverrideLocationOnRead, Mode=TwoWay}" Margin="10,0,10,5"></material:CheckBox>

            <material:DatePickerField x:Name="TfBuyDate" Title="Buy date:" Date="{Binding BuyDate,Mode=TwoWay}" Format="yyyy-MM-dd" Icon="{FontImageSource FontFamily=MaterialSharp, Glyph={x:Static m:MaterialSharp.Calendar_month}}">

            </material:DatePickerField>

            <material:TextField x:Name="TfPrice" Title="Price:" Keyboard="Numeric" Text="{Binding DefaultPrice,Mode=TwoWay}" AllowClear="True" Icon="{FontImageSource FontFamily=MaterialSharp, Glyph={x:Static m:MaterialSharp.Sell}}">
                <validation1:NumericNullableValidation  />
                <validation:MinValueValidation MinValue="0" />
            </material:TextField>

            <material:TextField x:Name="TfLotNr" Title="Lot nr:" Text="{Binding DefaultLotNr,Mode=TwoWay}" AllowClear="True" Icon="{FontImageSource FontFamily=MaterialSharp, Glyph={x:Static m:MaterialSharp.Tag}}" />

            <!--<material:TextField x:Name="TfLocation" Title="Location:" Text="{Binding DefaultLocation,Mode=TwoWay}" AllowClear="True" Icon="{FontImageSource FontFamily=MaterialSharp, Glyph={x:Static m:MaterialSharp.Map}}" />-->

            <Grid ColumnDefinitions="*,Auto">
                <material:AutoCompleteTextField x:Name="TfLocation" Grid.Column="0" Title="Location:" Threshold="1" Text="{Binding DefaultLocation,Mode=TwoWay}" AllowClear="True" ItemsSource="{Binding ExistingLocations}" Icon="{FontImageSource FontFamily=MaterialSharp, Glyph={x:Static m:MaterialSharp.Map}}" />
                <Button Grid.Column="1" Clicked="RefreshLocations_OnClicked"
                        VerticalOptions="Start" Margin="6,7,0,0" Padding="10,4"
                        HeightRequest="46"
                        BackgroundColor="Transparent"
                        BorderColor="Crimson" BorderWidth="1"
                        CornerRadius="6"
                        ImageSource="{FontImageSource FontFamily=MaterialSharp, Glyph={x:Static m:MaterialSharp.Refresh}, Color=Crimson, Size=18}" />
            </Grid>

            <!--<Button StyleClass="FilledButton" Text="Save changes" input:FormView.IsSubmitButton="True"/>-->

        </input:FormView>

        <Button Text="Test Spoolman Url" Clicked="TestSpoolmanUrl_OnClicked"
                Margin="0,20,0,0"
                StyleClass="OutlinedButton"
                ImageSource="{FontImageSource FontFamily=MaterialSharp, Glyph={x:Static m:MaterialSharp.Link}, Color={AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource OnSurfaceDark}}, Size=18}"
                />

        <Button Text="Back to Main" Clicked="BackToMain_OnClicked"
                Margin="0,20,0,10"
                StyleClass="FilledButton"
                ImageSource="{FontImageSource FontFamily=MaterialSharp, Glyph={x:Static m:MaterialSharp.Arrow_back}, Color={AppThemeBinding Light={StaticResource OnSurfaceDark}, Dark={StaticResource OnSurfaceDark}}, Size=18}"
                />

    </VerticalStackLayout>
</ContentPage>