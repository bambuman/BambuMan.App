<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#7E570E</Color>
    <Color x:Key="PrimaryDark">#ac99ea</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>

    <Color x:Key="LighterPurple">#AB95D6</Color>
    <Color x:Key="DarkGold">#916925</Color>

    <Color x:Key="PrimaryContainer">#EADDFF</Color>
    <Color x:Key="PrimaryContainerDark">#6443B7</Color>

    <Color x:Key="Secondary">#6E5B40</Color>
    <Color x:Key="SecondaryDark">#CCC2DC</Color>
    <Color x:Key="SecondaryContainer">#E8DEF8</Color>
    <Color x:Key="SecondaryContainerDark">#4A4458</Color>

    <Color x:Key="Tertiary">#506441</Color>
    <Color x:Key="TertiaryDark">#EFB8C8</Color>
    <Color x:Key="TertiaryContainer">#FFD8E4</Color>
    <Color x:Key="TertiaryContainerDark">#633B48</Color>

    <Color x:Key="Surface">#FFFBFE</Color>
    <Color x:Key="SurfaceDark">#1C1B1F</Color>

    <Color x:Key="SurfaceVariant">#E7E0EC</Color>
    <Color x:Key="SurfaceVariantDark">#49454F</Color>

    <Color x:Key="Background">#FFFBFE</Color>
    <Color x:Key="BackgroundDark">#1C1B1F</Color>

    <Color x:Key="Error">#B3261E</Color>
    <Color x:Key="ErrorDark">#F2B8B5</Color>
    <Color x:Key="ErrorContainer">#F9DEDC</Color>
    <Color x:Key="ErrorContainerDark">#8C1D18</Color>

    <Color x:Key="OnPrimary">#FFFFFF</Color>
    <Color x:Key="OnPrimaryDark">#371E73</Color>
    <Color x:Key="OnPrimaryContainer">#21005E</Color>
    <Color x:Key="OnPrimaryContainerDark">#EADDFF</Color>

    <Color x:Key="OnSecondary">#FFFFFF</Color>
    <Color x:Key="OnSecondaryDark">#332D41</Color>
    <Color x:Key="OnSecondaryContainer">#1E192B</Color>
    <Color x:Key="OnSecondaryContainerDark">#E8DEF8</Color>

    <Color x:Key="OnTertiary">#FFFFFF</Color>
    <Color x:Key="OnTertiaryDark">#492532</Color>
    <Color x:Key="OnTertiaryContainer">#370B1E</Color>
    <Color x:Key="OnTertiaryContainerDark">#FFD8E4</Color>

    <Color x:Key="OnSurface">#1C1B1F</Color>
    <Color x:Key="OnSurfaceDark">#E6E1E5</Color>

    <Color x:Key="OnSurfaceVariant">#49454E</Color>
    <Color x:Key="OnSurfaceVariantDark">#CAC4D0</Color>

    <Color x:Key="OnError">#FFFFFF</Color>
    <Color x:Key="OnErrorDark">#601410</Color>
    <Color x:Key="OnErrorContainer">#370B1E</Color>
    <Color x:Key="OnErrorContainerDark">#F9DEDC</Color>

    <Color x:Key="OnBackground">#1C1B1F</Color>
    <Color x:Key="OnBackgroundDark">#E6E1E5</Color>

    <Color x:Key="Outline">#646168</Color>
    <Color x:Key="OutlineText">#49474C</Color>
    <Color x:Key="OutlineDark">#B6B1BC</Color>

    <Color x:Key="OutlineVariant">#C4C7C5</Color>
    <Color x:Key="OutlineVariantDark">#444746</Color>

    <Color x:Key="Shadow">#000000</Color>
    <Color x:Key="ShadowDark">#000000</Color>

    <Color x:Key="SurfaceTint">#6750A4</Color>
    <Color x:Key="SurfaceTintDark">#D0BCFF</Color>

    <Color x:Key="InverseSurface">#313033</Color>
    <Color x:Key="InverseSurfaceDark">#E6E1E5</Color>
    <Color x:Key="InverseOnSurface">#F4EFF4</Color>
    <Color x:Key="InverseOnSurfaceDark">#313033</Color>

    <Color x:Key="InversePrimary">#D0BCFF</Color>
    <Color x:Key="InversePrimaryDark">#6750A4</Color>

    <Color x:Key="Scrim">#000000</Color>
    <Color x:Key="ScrimDark">#000000</Color>

    <!--APP SEMANTIC COLORS-->

    <!-- Status bar -->
    <Color x:Key="StatusBar">#EADFDF</Color>
    <Color x:Key="StatusBarDark">#1C1B1F</Color>

    <!-- Shell icons -->
    <Color x:Key="ShellIcon">#1C1B1F</Color>
    <Color x:Key="ShellIconDark">#E6E1E5</Color>

    <!-- Separators -->
    <Color x:Key="Separator">#C8C8C8</Color>
    <Color x:Key="SeparatorDark">#49454F</Color>

    <!-- Spool info card -->
    <Color x:Key="SpoolCardBackground">#F5EDE0</Color>
    <Color x:Key="SpoolCardBackgroundDark">#2C2520</Color>
    <Color x:Key="SpoolCardStroke">#7E570E</Color>
    <Color x:Key="SpoolCardStrokeDark">#D4A96A</Color>

    <!-- Error banner -->
    <Color x:Key="ErrorBannerStroke">#D32F2F</Color>
    <Color x:Key="ErrorBannerStrokeDark">#EF5350</Color>
    <Color x:Key="ErrorBannerBackground">Transparent</Color>
    <Color x:Key="ErrorBannerBackgroundDark">#2C1212</Color>
    <Color x:Key="ErrorBannerText">#C62828</Color>
    <Color x:Key="ErrorBannerTextDark">#EF9A9A</Color>

    <!-- Success banner -->
    <Color x:Key="SuccessBannerStroke">#2E7D32</Color>
    <Color x:Key="SuccessBannerStrokeDark">#66BB6A</Color>
    <Color x:Key="SuccessBannerBackground">#E8F5E9</Color>
    <Color x:Key="SuccessBannerBackgroundDark">#1B2E1B</Color>
    <Color x:Key="SuccessBannerText">#1B5E20</Color>
    <Color x:Key="SuccessBannerTextDark">#A5D6A7</Color>

    <!-- Info banner -->
    <Color x:Key="InfoBannerStroke">#0288D1</Color>
    <Color x:Key="InfoBannerStrokeDark">#4FC3F7</Color>
    <Color x:Key="InfoBannerBackground">#E1F5FE</Color>
    <Color x:Key="InfoBannerBackgroundDark">#0D2137</Color>
    <Color x:Key="InfoBannerText">#01579B</Color>
    <Color x:Key="InfoBannerTextDark">#81D4FA</Color>

    <!-- Version banner -->
    <Color x:Key="VersionBannerStroke">#2E7D32</Color>
    <Color x:Key="VersionBannerStrokeDark">#66BB6A</Color>
    <Color x:Key="VersionBannerBackground">#DEFFD1</Color>
    <Color x:Key="VersionBannerBackgroundDark">#1B2E1B</Color>
    <Color x:Key="VersionBannerText">#1B5E20</Color>
    <Color x:Key="VersionBannerTextDark">#A5D6A7</Color>

    <!-- Secondary buttons (blue-tinted: Email logs, Clear inventory) -->
    <Color x:Key="SecondaryButtonBackground">#D6E4F0</Color>
    <Color x:Key="SecondaryButtonBackgroundDark">#2A3545</Color>
    <Color x:Key="SecondaryButtonText">#1C1B1F</Color>
    <Color x:Key="SecondaryButtonTextDark">#E6E1E5</Color>

    <!-- Tertiary buttons (gray: Cancel, Clear logs) -->
    <Color x:Key="TertiaryButtonBackground">#E0E0E0</Color>
    <Color x:Key="TertiaryButtonBackgroundDark">#3A3A3A</Color>
    <Color x:Key="TertiaryButtonText">#1C1B1F</Color>
    <Color x:Key="TertiaryButtonTextDark">#E6E1E5</Color>

    <!-- Popup -->
    <Color x:Key="PopupBackground">#FFFFFF</Color>
    <Color x:Key="PopupBackgroundDark">#2C2C2C</Color>

    <!-- Warning banner (consent popup) -->
    <Color x:Key="WarningBannerStroke">#F44336</Color>
    <Color x:Key="WarningBannerStrokeDark">#EF5350</Color>
    <Color x:Key="WarningBannerBackground">#FFEBEE</Color>
    <Color x:Key="WarningBannerBackgroundDark">#3B1515</Color>
    <Color x:Key="WarningBannerText">#C62828</Color>
    <Color x:Key="WarningBannerTextDark">#EF9A9A</Color>
    <Color x:Key="WarningBannerIcon">#F44336</Color>
    <Color x:Key="WarningBannerIconDark">#EF5350</Color>

    <!-- Caution banner (consent popup) -->
    <Color x:Key="CautionBannerStroke">#FFC107</Color>
    <Color x:Key="CautionBannerStrokeDark">#FFD54F</Color>
    <Color x:Key="CautionBannerBackground">#FFF8E1</Color>
    <Color x:Key="CautionBannerBackgroundDark">#3B3012</Color>
    <Color x:Key="CautionBannerText">#6D4C00</Color>
    <Color x:Key="CautionBannerTextDark">#FFE082</Color>
    <Color x:Key="CautionBannerIcon">#F9A825</Color>
    <Color x:Key="CautionBannerIconDark">#FFD54F</Color>

    <!-- Links -->
    <Color x:Key="LinkText">DodgerBlue</Color>
    <Color x:Key="LinkTextDark">#64B5F6</Color>

    <!--DARK COLORS-->

    <Color x:Key="DisabledText">#ba919191</Color>
    <Color x:Key="DisabledBackground">#80919191</Color>
    
    <!--MAUI COLORS-->

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <Color x:Key="Yellow100Accent">#F7B548</Color>
    <Color x:Key="Yellow200Accent">#FFD590</Color>
    <Color x:Key="Yellow300Accent">#FFE5B9</Color>
    <Color x:Key="Cyan100Accent">#28C2D1</Color>
    <Color x:Key="Cyan200Accent">#7BDDEF</Color>
    <Color x:Key="Cyan300Accent">#C3F2F4</Color>
    <Color x:Key="Blue100Accent">#3E8EED</Color>
    <Color x:Key="Blue200Accent">#72ACF1</Color>
    <Color x:Key="Blue300Accent">#A7CBF6</Color>

    <!--BRUSHES-->

    <LinearGradientBrush x:Key="PrimaryContainerDarkBrush">
        <GradientStop Offset="0" Color="{StaticResource PrimaryContainerDark}" />
        <GradientStop Offset="1" Color="{StaticResource SecondaryContainerDark}" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PrimaryContainerBrush">
        <GradientStop Offset="0" Color="{StaticResource Secondary}" />
        <GradientStop Offset="1" Color="{StaticResource Primary}" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="OnSecondaryContainerBrush" Color="{StaticResource OnSecondaryContainer}" />

    <SolidColorBrush x:Key="TertiaryContainerBrush" Color="{StaticResource TertiaryContainer}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}" />
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="{StaticResource SurfaceVariant}" />

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}" />
    <SolidColorBrush x:Key="ErrorContainerBrush" Color="{StaticResource ErrorContainer}" />
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="{StaticResource OnPrimary}" />
    <SolidColorBrush x:Key="OnPrimaryContainerBrush" Color="{StaticResource OnPrimaryContainer}" />
    <SolidColorBrush x:Key="OnTertiaryBrush" Color="{StaticResource OnTertiary}" />
    <SolidColorBrush x:Key="OnTertiaryContainerBrush" Color="{StaticResource OnTertiaryContainer}" />

    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource OnSurface}" />
    <SolidColorBrush x:Key="OnSurfaceVariantBrush" Color="{StaticResource OnSurfaceVariant}" />

    <SolidColorBrush x:Key="OnErrorBrush" Color="{StaticResource OnError}" />
    <SolidColorBrush x:Key="OnErrorContainerBrush" Color="{StaticResource OnErrorContainer}" />

    <SolidColorBrush x:Key="OnBackgroundBrush" Color="{StaticResource OnBackground}" />

    <SolidColorBrush x:Key="OutlineBrush" Color="{StaticResource Outline}" />
    <SolidColorBrush x:Key="OutlineVariantBrush" Color="{StaticResource OutlineVariant}" />

    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource Shadow}" />

    <SolidColorBrush x:Key="InversePrimaryBrush" Color="{StaticResource InversePrimary}" />

    <SolidColorBrush x:Key="ScrimBrush" Color="{StaticResource Scrim}" />



</ResourceDictionary>